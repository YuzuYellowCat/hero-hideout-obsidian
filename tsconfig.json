{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "src",
        "definitions.d.ts",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts",
        "next.config.ts",
        "build/types/**/*.ts",
        "build/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules"],
    "ts-node": { "esm": true }
}
